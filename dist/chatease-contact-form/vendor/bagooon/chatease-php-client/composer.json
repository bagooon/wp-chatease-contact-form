{
    "name": "bagooon/chatease-php-client",
    "description": "PHP client for ChatEase board API (server-side only)",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "ext-json": "*",
        "ext-curl": "*"
    },
    "autoload": {
        "psr-4": {
            "Bagooon\\ChatEase\\": "src/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5.63",
        "phpstan/phpstan": "^2.1"
    },
    "archive": {
        "exclude": [
            "/tests",
            "/phpunit.xml.dist"
        ]
    },
    "scripts": {
        "test": "phpunit",
        "phpstan": "phpstan analyse"
    }
}
